<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

      <Button
          android:id="@+id/sd"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="读取SD卡"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/contact"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="读取联系人"
          app:layout_constraintStart_toEndOf="@+id/sd"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/sms"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="发送短信"
          app:layout_constraintStart_toEndOf="@+id/contact"
          app:layout_constraintTop_toTopOf="parent"/>
      <Button
          android:id="@+id/cameraRecord"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="使用相机和录音"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/sd"/>
      <Button
          android:id="@+id/appSetting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="应用设置"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/cameraRecord"/>
      <Button
          android:id="@+id/setting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="设置"
          app:layout_constraintStart_toEndOf="@+id/appSetting"
          app:layout_constraintTop_toBottomOf="@+id/cameraRecord"/>
      <Button
          android:id="@+id/detailSetting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="应用详细设置"
          app:layout_constraintStart_toEndOf="@+id/setting"
          app:layout_constraintTop_toBottomOf="@+id/cameraRecord"/>
      <Button
          android:id="@+id/GPSSetting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="GPS设置"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/appSetting"/>
      <Button
          android:id="@+id/wireLessSetting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="网络设置"
          app:layout_constraintStart_toEndOf="@+id/GPSSetting"
          app:layout_constraintTop_toBottomOf="@+id/setting"/>
      <Button
          android:id="@+id/wifiSetting"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="wifi setting"
          app:layout_constraintStart_toEndOf="@+id/wireLessSetting"
          app:layout_constraintTop_toBottomOf="@+id/detailSetting"/>
      <Button
          android:id="@+id/data"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:text="漫游数据"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/GPSSetting"/>


</android.support.constraint.ConstraintLayout>
